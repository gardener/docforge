docforge:
  template: "default"
  base_definition:
    traits:
      version:
        preprocess: "inject-commit-hash"
        inject_effective_version: true
      component_descriptor: ~
      publish:
        dockerimages:
          docforge:
            registry: "gcr-readwrite"
            image: "eu.gcr.io/gardener-project/docforge"
            dockerfile: "Dockerfile"
            inputs:
              repos:
                source: ~
              steps:
                build: ~
    steps:
      check:
        image: "golang:1.14.4"
      compliance:
        image: "fsfe/reuse:latest"       
      test:
        image: "golang:1.14.4"
      build:
        image: "golang:1.14.4"
        output_dir: "binary"
      docs-gen:
        image: "golang:1.14.4"
        inputs:
          BINARY_PATH: 'binary_path'
        depends:
        - build
  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: "finalize"
        release:
          nextversion: "bump_minor"
        slack:
          default_channel: "internal_scp_workspace"
          channel_cfgs:
            internal_scp_workspace:
              channel_name: "G0170ECNADC" #gardener-space-sofia
              slack_cfg_name: "ti_workspace"
      steps:
        docs-gen:
          image: "golang:1.14.4"
          inputs:
            BINARY_PATH: 'binary_path'
          depends:
          - release
        docs-lint:
          image: "eu.gcr.io/gardener-project/docs-toolbelt:latest"
          depends:
          - docs-gen
        update-release:
          execute: 'update-release.py'
          inputs:
            BINARY_PATH: 'binary_path'
          depends:
          - docs-lint
